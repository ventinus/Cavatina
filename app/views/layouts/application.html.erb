        <li class="nav-link"><a href="contact">Contact</a></li>
        <li class="nav-link more"><a href="javascript:void(0)">More</a>
          <ul class="submenu">
            <li><a href="/posts">Posts</a></li>            
            <li><a href="/rooms">Rooms</a></li>
          </ul>
        </li>
      </ul>
    </nav>
    <div class="right">
      <% if user_signed_in? %>
        <button><a rel="nofollow" data-method="delete" href="/users/sign_out" class="sign-up">Logout</a></button>
        <button><a href="/users/edit" class="sign-up">Edit Profile</a></button>
      <% else %>
        <button><a href="/users/sign_up" class="sign-up">Sign Up</a></button>
        <button><a href="/users/sign_in" class="sign-up">Log In</a></button>
      <% end %>
    </div>
    </div>
  </div>
</header>
